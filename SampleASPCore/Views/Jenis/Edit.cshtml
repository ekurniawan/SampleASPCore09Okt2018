@model SampleASPCore.Models.Jenis

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Jenis</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JenisID" class="control-label"></label>
                <input asp-for="JenisID" class="form-control" readonly="readonly" />
                <span asp-validation-for="JenisID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NamaJenis" class="control-label"></label>
                <input asp-for="NamaJenis" class="form-control" />
                <span asp-validation-for="NamaJenis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
